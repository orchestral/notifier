{
    "name": "orchestra/notifier",
    "description": "User Notification Component for Orchestra Platform",
    "keywords": ["orchestra-platform", "orchestral", "laravel", "mailer"],
    "license": "MIT",
    "authors": [
        {
            "name": "Mior Muhammad Zaki",
            "email": "crynobone@gmail.com",
            "homepage": "https://github.com/crynobone"
        }
    ],
    "autoload": {
        "psr-4": {
            "Orchestra\\Notifier\\" : "src/"
        }
    },
    "require": {
        "php": ">=5.6.0",
        "illuminate/encryption": "~5.3.0",
        "orchestra/contracts": "~3.3.0",
        "orchestra/memory": "~3.3.0",
        "orchestra/support": "~3.3.0",
        "tijsverkoyen/css-to-inline-styles": "~1.2"
    },
    "require-dev": {
        "aws/aws-sdk-php": "~3.0",
        "jeremeamia/superclosure": "~2.0",
        "illuminate/mail": "~5.3.0",
        "mockery/mockery": "~0.9.4"
    },
    "suggest": {
        "aws/aws-sdk-php": "Required to use the SES mail driver (~3.0).",
        "guzzlehttp/guzzle": "Required to use the Mailgun, Mandrill and SparkPost mail drivers (~5.3|~6.0)."
    },
    "extra": {
        "branch-alias": {
            "dev-master": "3.3-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev"
}
